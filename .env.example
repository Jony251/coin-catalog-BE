# Runtime
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Networking / security
ALLOWED_ORIGINS=http://localhost:8081,http://localhost:19006,http://localhost:3000
TRUST_PROXY=false
REQUEST_BODY_LIMIT=1mb
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200
MAX_SYNC_ITEMS=1000
SHUTDOWN_TIMEOUT_MS=10000

# Feature flags
ENABLE_EMAIL_CLEANUP=true
PRO_ACTIVATION_CODES=

# Firebase Admin SDK (option B if serviceAccountKey.json is not used)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Firebase Web API key (required for secure /auth/login password verification)
FIREBASE_WEB_API_KEY=
